<h1>Create Your Movie!</h1>
<%= form_with model: @movie do |f| %>
  <div class = "field">
    <%= f.label :title %>
    <%= f.text_field :title, required: true, placeholder: "Title" %>
  </div>
  <div class = "field">
    <%= f.label :duration %>
    <%= f.text_field :duration, required: true, placeholder: "Duration" %>
  </div>
  <div class = "field">
    <%= f.label :genre %>
    <%= f.text_field :genre, required: true, placeholder: "Genre" %>
  </div>
  <div class = "field">
    <%= f.label :description %>
    <%= f.text_field :description, required: true, placeholder: "Description" %>
  </div>
  <div class = "field">
    <%= f.label :Trailor %>
    <%= f.text_field :Trailor, required: true, placeholder: "Trailor" %>
  </div>
  <%= f.submit %>
  <% end %>